@{
    var teamMembers = new List<TeamMemberVM>
    {
        new TeamMemberVM { NameKey = "person_1_name", PositionKey = "person_1_position", ImagePath = "/images/fanur-about-us/person_1.jpg" },
        new TeamMemberVM { NameKey = "person_2_name", PositionKey = "person_2_position", ImagePath = "/images/fanur-about-us/person_2.jpg" },
        new TeamMemberVM { NameKey = "person_3_name", PositionKey = "person_3_position", ImagePath = "/images/fanur-about-us/person_3.jpg" },
        new TeamMemberVM { NameKey = "person_4_name", PositionKey = "person_4_position", ImagePath = "/images/fanur-about-us/person_4.jpg" },
        new TeamMemberVM { NameKey = "person_5_name", PositionKey = "person_5_position", ImagePath = "/images/fanur-about-us/person_5.jpg" },
        new TeamMemberVM { NameKey = "person_6_name", PositionKey = "person_6_position", ImagePath = "/images/fanur-about-us/person_6.jpg" },
        new TeamMemberVM { NameKey = "person_7_name", PositionKey = "person_7_position", ImagePath = "/images/fanur-about-us/person_7.jpg" },
        new TeamMemberVM { NameKey = "person_8_name", PositionKey = "person_8_position", ImagePath = "/images/fanur-about-us/person_8.jpg" },
        new TeamMemberVM { NameKey = "person_9_name", PositionKey = "person_9_position", ImagePath = "/images/fanur-about-us/person_9.jpg" },
        new TeamMemberVM { NameKey = "person_10_name", PositionKey = "person_10_position", ImagePath = "/images/fanur-about-us/person_10.jpg" },
        new TeamMemberVM { NameKey = "person_11_name", PositionKey = "person_11_position", ImagePath = "/images/fanur-about-us/person_11.jpg" },
        new TeamMemberVM { NameKey = "person_12_name", PositionKey = "person_12_position", ImagePath = "/images/fanur-about-us/person_12.jpg" }
    };
}

<div class="rbt-team-area bg-color-extra2 rbt-section-gap">
    <div class="container">
        <div class="row g-5">
            @foreach (var member in teamMembers)
            {
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="rbt-team team-style-default style-three small-layout rbt-hover">
                        <div class="inner">
                            <div class="thumbnail" style="text-align: center;">
                                <img style="width:200px; align-items: center;" src="@member.ImagePath" alt="Corporate Template">
                            </div>
                            <div class="content">
                                <h4 class="title">@Localizer[member.NameKey]</h4>
                                <h6 class="subtitle theme-gradient">@Localizer[member.PositionKey]</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
