@model FanurApp.Models.Resource

<h4>Edit Resource</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="rbt-form-group">
                <label asp-for="Key" class="control-label">Key</label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            
            <div class="rbt-form-group">
                <label asp-for="Value" class="control-label">Value</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            
            <div class="rbt-form-group">
                <label asp-for="CultureId" class="control-label">Culture Name</label>
                <select asp-for="CultureId" class="form-control" asp-items="ViewBag.CultureId"></select>
                <span asp-validation-for="CultureId" class="text-danger"></span>
            </div>
            
            <div class="rbt-form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
